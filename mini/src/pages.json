{
  "easycom": {
    "^u-(.*)": "uview-ui/components/u-$1/u-$1.vue"
  },
  "pages": [
    //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
    {
      "path": "pages/index/index",
      "style": {
        "navigationBarTitleText": "首页"
      }
    },
    {
      "path": "pages/lesson-record/lesson-record",
      "style": {
        "navigationBarTitleText": "",
        "enablePullDownRefresh": true
      }
    },
    {
      "path": "pages/lesson-record-report/lesson-record-report",
      "style": {
        "navigationBarTitleText": "课时月报",
        "enablePullDownRefresh": true
      }
    },
    {
      "path": "pages/lesson-record-create/lesson-record-create",
      "style": {
        "navigationBarTitleText": "新建一条课时记录"
      }
    },
    {
      "path": "pages/course-choose/course-choose",
      "style": {
        "navigationBarTitleText": "选择课程",
        "enablePullDownRefresh": true
      }
    },
    {
      "path": "pages/lesson-choose/lesson-choose",
      "style": {
        "navigationBarTitleText": "",
        "enablePullDownRefresh": true
      }
    },
    {
      "path": "pages/me/me",
      "style": {
        "navigationBarTitleText": "我的"
      }
    },
    {
      "path": "pages/settings/settings",
      "style": {
        "navigationBarTitleText": "配置"
      }
    },
    {
      "path": "pages/validation/validation",
      "style": {
        "navigationBarTitleText": "账户验证"
      }
    }
  ],
  "globalStyle": {
    "navigationBarTextStyle": "white",
    "navigationBarTitleText": "ins-tools",
    "navigationBarBackgroundColor": "#ff6b6b",
    "backgroundColor": "#F8F8F8"
  },
  "tabBar": {
    "selectedColor": "#ff6b6b",
    "color": "#333333",
    "list": [
      {
        "pagePath": "pages/index/index",
        "text": "面板",
        "iconPath": "/static/circle.png",
        "selectedIconPath": "/static/circle_fill.png"
      },
      {
        "pagePath": "pages/me/me",
        "text": "我的",
        "iconPath": "/static/my.png",
        "selectedIconPath": "/static/my_fill.png"
      }
    ]
  }
}
